		{
			knowledge.map(
				(item) => (
					<Knowledge knowledge={ item } />
				)
			)
		}
	</div>
	<div class="mx-auto my-6 w-3/4">
		<PortfolioButton content={ contentPortfolioButton }/>
	</div>
	<ContactButton content={ contentContactButton }/>
