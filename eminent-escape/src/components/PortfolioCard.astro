---
interface ProjectsProps {
    information: string;
    imageSrc: string;
    imageAlt: string;
}
const { information, imageSrc, imageAlt } = Astro.props as ProjectsProps;
---
<figure class="relative w-full h-full border-4 border-primary rounded-lg shadow-xl
overflow-hidden cursor-pointer before:absolute before:top-0
before:left-0 before:right-0 before:bottom-0 before:bg-primary before:text-white
before:transform before:translate-x-full before:transition-transform before:duration-400
hover:before:translate-x-0">
    <img src={ imageSrc } alt={ imageAlt } />
    <span
    class="absolute inset-0 flex items-center justify-center bg-primary text-white
    opacity-0 transition-opacity duration-400 hover:opacity-100" >
        { information }
    </span>
</figure>