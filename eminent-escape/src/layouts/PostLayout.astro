---
import "../styles/global.css";
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";
import ContactButton from '../components/ContactButton.astro';
import { inject } from '@vercel/analytics';

inject();

interface ContactProps {
    icon: string;
    iconHover: string;
    alt: string;
}
const contentContactButton: ContactProps = {
	icon: '/assets/contact.svg',
	iconHover: '/assets/contact_hover.svg',
	alt: 'Icono de contacto'
}
---

<!doctype html>
<html lang="es-Mx">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
		<meta name="generator" content={Astro.generator} />
		<title>gerardomarquez.dev</title>
	</head>
	<body class="">
		<Menu/>
		<main class="min-h-screen max-w-[768px] mx-auto mt-20 mb-6 px-8 md:px-0">
			<slot/>
		</main>
		<Footer/>
		<ContactButton content={ contentContactButton }/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
